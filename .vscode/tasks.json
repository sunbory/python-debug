{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build docker",
            "type": "shell",
            "command": "ssh",
            "args": [
                "root@${config:RemoteDebug.host}",
                "cd ${config:RemoteDebug.path}; docker build -t remote-debugging-docker ."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Restart Remote docker for debug",
            "type": "shell",
            "command": "ssh",
            "args": [
                "root@${config:RemoteDebug.host}",
                "cd ${config:RemoteDebug.path}; docker run -it --rm -p 3000:3000 -v $(pwd):/opt/ remote-debugging-docker"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
